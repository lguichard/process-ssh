{
    "name": "lguichard/process-ssh",
    "description": "Package to use Laravel Process over SSH connections",
    "keywords": ["php", "ssh", "laravel", "process"],
    "version": "1.0.3",
    "license": "MIT",
    "authors": [
        {
            "name": "Lionel Guichard",
            "email": "lionel.guichard@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0 || ^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18.1",
        "orchestra/testbench": "^9.9",
        "pestphp/pest": "^3.5.1",
        "pestphp/pest-plugin-watch": "^3.0",
        "phpstan/phpstan": "^1.12.7",
        "rector/rector": "^1.2.8",
        "symfony/var-dumper": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "Bagel\\ProcessSsh\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bagel\\ProcessSsh\\Providers\\ProcessSshServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --parallel",
        "test": [
            "rector",
            "composer lint",
            "@test:types",
            "@test:unit"
        ],
        "test:unit:watch" : [
            "Composer\\Config::disableProcessTimeout",
            "pest --watch=src,tests"
        ]
    }
}
